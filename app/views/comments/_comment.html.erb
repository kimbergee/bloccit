<div class="media">
  <div class="media-body">
    <small>
      <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if user_is_authorized_for_comment?(comment) && @post %>
        | <%= link_to "Delete", [@post, comment], method: :delete %>
      <% else user_is_authorized_for_comment?(comment) && @topic %>
        | <%= link_to "Delete", [@topic, comment], method: :delete %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
</div>
